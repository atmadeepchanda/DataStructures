#include<stdio.h>
#include<stdlib.h>
void merge(int l,int u,int mid,int arr[])
{
    int i,j,k;
    int n1=mid-l+1;
    int n2=u-mid;
    int arr1[n1];
    int arr2[n2];
    for(i=0;i<n1;i++)
        arr1[i]=arr[l+i];
    for(j=0;j<n2;j++)
        arr2[j]=arr[mid+1+j];

    i=0;
    j=0;
    k=l;
    while(i<n1 && j<n2)
    {
        if((arr1[i])<=(arr2[j]))
            arr[k]=arr1[i++];

        else
            arr[k]=arr2[j++];


k++;
    }

    while(i<n1)
        arr[k++]=arr1[i++];



    while(j<n2)
        arr[k++]=arr2[j++];



}

void mergeSort(int arr[], int l,int u )
{

    if(l<u)
    {
        int mid=(l+u)/2;
        mergeSort(arr,l,mid);
        mergeSort(arr,mid+1,u);
        merge(l,u,mid,arr);
    }
}

int main()
{
    int n,i;
    printf("\nEnter the size of array\n");
    scanf("%d",&n);
    int* arr=(int*)malloc(n*sizeof(int));
    printf("\nEnter the elements of the array\n");
    for(i=0;i<n;i++)
        scanf("%d",arr+i);
    mergeSort(arr,0,n-1);
    printf("\nThe array after sorting is\n");

    for(i=0;i<n;i++)
        printf("%d  ",arr[i]);
    return 0;

}









